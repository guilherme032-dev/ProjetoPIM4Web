@model IEnumerable<ProjetoPIM4.Models.ProductService>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Bem-vindo ao Sistema de Helpdesk</h1>
    <p>Explore nossos serviços disponíveis.</p>
</div>

<div class="row">
    @if (Model != null && Model.Any())
    {
        @foreach (var service in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@service.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@service.Category</h6>
                        <p class="card-text">@service.Description</p>
                        <a href="#" class="btn btn-primary">Saiba Mais</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <p>Nenhum serviço ativo disponível no momento.</p>
        </div>
    }
</div>

